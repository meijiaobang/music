/* 背景 */
page{
  background-color: #f1f1f1;
}
.blog{
  padding: 20rpx;
  background-color: white;
}
.blog-title{
  display: flex;
  align-items: center;
}
.plog-portrait{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.blog-box{
  flex: 1;/*让所有弹性盒模型对象的子元素都有相同的长度，且忽略它们内部的内容：*/
}
.blog-nickName{
  font-size: 32rpx;
}
/* 文字 */
.blog-content{
  margin:20rpx 0;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
}
/* 图片 */

.blog-img{
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
}
.blog-img .img{
  width:230rpx;
  height: 230rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.blog-img .img:nth-child(3n){
  margin-right: 0;
}
