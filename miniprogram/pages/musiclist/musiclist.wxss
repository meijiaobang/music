.detail-container {
  height: 320rpx;
  filter: blur(30rpx);
  opacity: 0.5;
}

.detail-mask {
  width: 100%;
  height: 320rpx;
  background-color: #333;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

/* 中间 */
.detail-info {
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
  padding: 20rpx;
  box-sizing: border-box;
  align-items: center;
}

.detail-img {
  width: 340rpx;
  height: 280rpx;
  margin-right: 15rpx;
  border-radius: 6rpx;
}

.detail view{
  color: white;
}

.detail .detail-nm {
 font-size: 36rpx;
 font-weight: 400;
}