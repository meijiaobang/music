page {
  background-color: #f1f1f1;
}
.profile-header{
  background-image:url(https://7879-xyj-8tttu-1300244422.tcb.qcloud.la/imges/dt.gif?sign=28f6895aec49ace93b53e0a1a970d89b&t=1581586809);
  background-size: 100% 100%;
  -moz-background-size:100% 100%;
  height: 480rpx;
  display: flex;
  justify-content: center;/*垂直居中*/
  flex-direction: column;/*一个一个列*/
  align-items: center;/*水平居中*/
