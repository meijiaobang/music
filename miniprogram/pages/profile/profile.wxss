.avatar-url {
  width: 200rpx;
  height: 200rpx;
  border: 6rpx solid #fff;
  /* display: block; */
  overflow: hidden;
  border-radius: 50%;
}

.nickname {
  font-size: 36rpx;
  margin-top: 20rpx;
  font-weight: 400;
}
/* 菜单栏 */
.nav{
  margin-right: 18rpx;
  margin-left: 15rpx;
  margin-top:22rpx;
  border-radius:3%;
  overflow: hidden;
}
.nav-item{
  padding-right: 90rpx;
  /* position: relative; */
  display: flex;
  padding: 0 30rpx;
  min-height: 92rpx;
  background-color: #fff;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(0,0,0,.3);
}
.content{
  font-size:30rpx;
  /* line-height: 1.6em; */
  position: relative;
  flex: 1;
}
.content .iconfont{
  color: #d43c33;
  font-weight: 300;
  margin-right: 30rpx;
}
