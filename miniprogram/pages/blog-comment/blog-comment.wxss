/* 博客详情 */
.container{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 100rpx;
}
.blog-card{
  margin-bottom: 20rpx;
}
.tab{
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  background: white;
  border-bottom: 1rpx solid rgba(0,0,0,.3);
}
.tab-item{
  color: #697480;
}
/* 头像昵称样式 */
.comment{
  padding:20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0,.3);
}
.comment-title{
  display: flex;
  align-items: center;
}
.comment-portrait{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.comment-nickname{
  flex:1;
}
/* 内容文字 */
.comment-content{
  font-size:32rpx;
  font-weight: 400;
  padding: 10rpx 0;
  line-height: 1.4;
}
.comment-time{
  font-size: 24rpx;
  color: #939393;
}
/* 评论组件 */
.blog-ctrl{
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  left: 0;
  border-top: 2rpx solid rgba(0,0,0,0.1);
}