.container{
  padding: 20rpx;
}
.content{
  font-size:36rpx;
  width: 100%;
  height: 360rpx;
  box-sizing: border-box;/*往里面缩*/
}
/* 图片样式 */
.image-list{
  display: flex;
  flex-wrap: wrap;/*不够就换行*/
  margin-top: 20rpx;
}
.image-wrap{
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  position: relative;
  overflow: hidden;
  text-align: center;
}
.image{
  width: 100%;
  height: 100%;
}
.icon-delete{
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: #000;
  opacity: 0.5;
  color: white;
  text-align: center;
  line-height: 40rpx;
  font-size: 38rpx;
  font-weight: bolder;/*定义更粗的字体*/
}
/*加号图片样式 */
.selectphoto {
  border: 2rpx dashed #cbd1d7;
  position: relative;
}
.icon-yuanquanjiahao{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #cbd1d7;
  font-size: 60rpx;
}
.fone-size{
  font-size: 90rpx;
}
.footer{
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  position: 20rpx;
  width: 100%;
  box-sizing: border-box;
  background:#f1f1f1;
}
.words-num{
  flex:1;
  text-align: right;
  color: #474747;
  font-size: 32rpx;
  padding-right: 30rpx;
}
.send-btn{
  /* margin-top: 30px; */
  width: 80%;
  background-color: rgb(252, 126, 67);
  color: white;
  border-radius: 98rpx;
  background: bg_red;
}
/* 按下变颜色 */
.hover {
  background:  rgb(236, 179, 156);
}